<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/accent_ripple_color"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/all_apps_header_pill_corner_radius" />
            <solid android:color="@color/accent_ripple_color" />
        </shape>
    </item>
    <item>
        <selector android:enterFadeDuration="100">
            <item android:state_selected="false" android:id="@id/unselected">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/all_apps_header_pill_corner_radius" />
                    <solid android:color="@color/all_apps_tabs_background" />
                </shape>
            </item>
            <item android:state_selected="true" android:id="@id/selected">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/all_apps_header_pill_corner_radius" />
                    <solid android:color="@color/all_apps_tab_background_selected" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>