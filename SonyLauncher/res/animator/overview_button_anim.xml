<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="0.5" android:valueType="floatType" android:propertyName="alpha" />
    </item>
    <item>
        <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="1" android:valueType="floatType" android:propertyName="alpha" />
    </item>
</selector>